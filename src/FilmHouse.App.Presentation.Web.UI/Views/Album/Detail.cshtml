@using Microsoft.AspNetCore.Http.Extensions;
@using Microsoft.AspNetCore.Http;
@using FilmHouse.Core.ValueObjects;

@model FilmHouse.App.Presentation.Web.UI.Models.AlbumDetailViewModel;

@{
    ViewBag.Title = Model.Title;
    ViewBag.PageType = 2;

    var transfer = new Uri(Context.Request.GetDisplayUrl()).PathAndQuery;
}

@section Links {
    <link rel="stylesheet" asp-append-version="true" href="~/css/album.css" />
}

<div class="col-sm-8">
    <b style="font-size:28px;">@Model.Album.Title</b>
    <div style="margin-top:5px;">
        <span>
            来自: <a href="/People/Index?userId=@Model.Album.UserId&transfer=@transfer" class="link-text" target="_self" title="@Model.Album.Account 的主页">@Model.Album.Account</a>
        </span>&nbsp;&nbsp;&nbsp;&nbsp;
        <span>@Model.Album.CreatedOn 创建</span>&nbsp;&nbsp;&nbsp;&nbsp;
        <span>@Model.Album.UpDatedOn 更新</span>
    </div>
    <p style="margin-top:10px;">@Model.Album.Summary</p>
    <div style="margin-top:10px; margin-bottom:15px; ">

        @if (Model.IsCreator)
        {
            <a class="link-text" href="/Album/Edit?albumId=@Model.Album.AlbumId&transfer=@transfer" title="修改">&gt;修改</a>
            <a class="link-text" href="/Album/Delete?albumId=@Model.Album.AlbumId&transfer=@transfer" title="删除">&gt;删除</a>

            <a class="btn btn-xs btn-primary pull-right" title="添加内容" data-toggle="modal" data-target="#modalAdd"><span class="fa fa-plus"></span>添加内容</a>
        }
        else
        {
            if (Model.Album.HasFollow)
            {
                <a class="btn btn-xs btn-primary" href="/Mark/Cancel?target=@Model.Album.AlbumId&type=@MarkTypeVO.Codes.MarkTypeCode7&transfer=@transfer" title="取消关注"><span class="fa fa-star-o"></span>取消关注</a>
            }
            else
            {
                <a class="btn btn-xs btn-primary" href="/Mark/Create?target=@Model.Album.AlbumId&type=@MarkTypeVO.Codes.MarkTypeCode7&transfer=@transfer" title="关注"><span class="fa fa-star-o"></span>关注</a>
            }
        }
    </div>

    <hr />

    @if (Model.Items.Count == 0)
    {
        <div class="text-center">这个专辑还没有内容(＃￣▽￣＃)</div>
    }

    @foreach (var item in Model.Items)
    {
        <div id="div-back">
            <div class="panel panel-default" id="div-card">
                <div id="div-image">
                    <a class="full-height" href="/Movie/Index?id=@item.MovieInfo.Id">
                        <img src="~/Content/Movie/@item.MovieInfo.Avatar" title="@item.MovieInfo.Title" class="img-responsive full-height full-width" />
                    </a>
                </div>
                <div id="div-info">
                    <div>
                        <a href="/Movie/Index?id=@item.MovieInfo.Id" target="_self">
                            <strong title="@item.MovieInfo.Title">@item.MovieInfo.Title</strong>
                        </a>
                        <a href="http://movie.douban.com/subject/@item.MovieInfo.DoubanID/" class="clr-doubangreen" title="跳转到豆瓣电影" target="_self">
                            @item.MovieInfo.Rating
                        </a>
                        <span class="label label-info font-small" style="padding:0px 3px;">@item.MovieInfo.Year</span>
                    </div>
                    <div class="text-overflow">
                        <strong>导演</strong>
                        @foreach (var celebitem in item.MovieInfo.Directors.Take(4))
                        {
                            if (!string.IsNullOrEmpty(celebitem.Id))
                            {
                                <a href="/Celeb/Index?id=@celebitem.Id" class="link-text" target="_self">@celebitem.Title</a>
                            }
                            else
                            {
                                <span>@celebitem.Title</span>
                            }
                        }
                    </div>
                    <div class="text-overflow">
                        <strong>类型</strong>
                        <span>@item.MovieInfo.Genres</span>
                    </div>
                    <div class="text-overflow">
                        <strong>编剧</strong>
                        @foreach (var celebitem in item.MovieInfo.Writers.Take(4))
                        {
                            if (!string.IsNullOrEmpty(celebitem.Id))
                            {
                                <a href="/Celeb/Index?id=@celebitem.Id" class="link-text" target="_self">@celebitem.Title</a>
                            }
                            else
                            {
                                <span>@celebitem.Title</span>
                            }
                        }
                    </div>
                    <div class="text-overflow">
                        <strong>主演</strong>
                        @foreach (var celebitem in item.MovieInfo.Casts.Take(4))
                        {
                            if (!string.IsNullOrEmpty(celebitem.Id))
                            {
                                <a href="/Celeb/Index?id=@celebitem.Id" class="link-text" target="_self">@celebitem.Title</a>
                            }
                            else
                            {
                                <span>@celebitem.Title</span>
                            }
                        }
                    </div>
                </div>
            </div>
            <div style="margin-top:10px;">
                <div style="display:inline-block;">
                    备注：<span>@item.Note</span>
                </div>
                @if (Model.IsCreator)
                {
                    <a href="/Album/DeleteItem?id=@Model.Id&movie=@item.MovieInfo.Id&transfer=@transfer" class="link-text pull-right" title="删除 @item.MovieInfo.Title">删除</a>
                }
            </div>
        </div>
    }

    @if (Model.PagingCount > 1)
    {
        @FilmHouse.App.Presentation.Web.UI.Helper.Controls.PageTagList(Model.Page, Model.PagingSize, Model.PagingCount, ViewBag.CurrentUrl)
    }

    <div class="modal fade" id="modalAdd" tabindex="-1" role="dialog"
         aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                @using (Html.BeginForm("AddItem", "Album", new { id = Model.Id, returnurl = Request.Url }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            &times;
                        </button>
                        <h4 class="modal-title" id="myModalLabel">
                            添加内容
                        </h4>
                    </div>
                    <div class="modal-body" style="padding:15px 50px;">
                        <label class="control-label" for="movie" style="margin-top:0px;">电影编号</label>
                        <input name="movie" id="movie" class="form-control" placeholder="请输入电影编号" style="margin-top: 5px;" />
                        <label class="control-label" for="note" style="margin-top:12px;">备注</label>
                        <input name="note" id="note" class="form-control" style="margin-top:5px;" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">
                            关闭
                        </button>
                        <input type="submit" class="btn btn-primary" value="提交">
                    </div>
                }
            </div>
        </div>
    </div>
</div>
