@using FilmHouse.App.Presentation.Web.UI.Models;

@model List<CelebrityViewModel>

@{
    var type = ViewData["type"] as string;
    if (type == "Directors")
    {
        <span style="color:#808080;">导演:</span>
    }
    if (type == "Writers")
    {
        <span style="color:#808080;">编剧:</span>
    }
    if (type == "Casts")
    {
        <span style="color:#808080;">演员:</span>
    }

    foreach (var item in Model)
    {
        if (item.Id != null && !string.IsNullOrEmpty(item.Id.AsPrimitive().ToString()))
        {
            <a href="/Celeb/Index?celebrityId=@item.Id" class="link-text" target="_self">@item.Name</a>
        }
        else
        {
            <span>@item.Name</span>
        }
    }
}
