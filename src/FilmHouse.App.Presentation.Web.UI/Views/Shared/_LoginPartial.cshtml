@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Http.Extensions;

@{
    var fullUrl = Context.Request.GetDisplayUrl();
}

@if (User.Identity.IsAuthenticated)
{
    <div class="navbar-right">
        <ul class="nav navbar-nav">
            <li class="dropdown li-account">
                <a href="javascript: void(0);" class="dropdown-toggle" data-toggle="dropdown">@User.Identity.Name<b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li><a href="/Mine/Index/">我的主页</a></li>
                    <li><a href="/Mine/ChangeAvatar/">个人设置</a></li>
                    <li><a href="/Mine/MineMovie?type=1">我的电影</a></li>
                    <li><a href="/Mine/MineAlbum?type=1">我的专辑</a></li>
                    <li class="divider"></li>
                    <li>
                        @Html.ActionLink("注销", "SignOut", "Account", routeValues: new { returnUrl = fullUrl }, htmlAttributes: new { id = "signOutLink" })
                    </li>
                </ul>
            </li>
        </ul>
    </div>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("注册", "Register", "Account", routeValues: new { returnUrl = fullUrl }, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("登录", "Login", "Account", routeValues: new { returnUrl = fullUrl }, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
