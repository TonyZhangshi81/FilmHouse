// Configure bundling and minification for the project.
// More info at https://go.microsoft.com/fwlink/?LinkId=808241
[
  {
    "outputFileName": "wwwroot/dist/combined.min.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/lib/bootstrap/css/bootstrap.css",
      "wwwroot/css/site.css",
      "wwwroot/css/custom.css",
      "wwwroot/lib/font-awesome/css/font-awesome.css"
    ],
    "minify": {
      "enabled": true,
      "adjustRelativePaths": true
    }
  },

  {
    "outputFileName": "wwwroot/dist/combined.min.js",
    "inputFiles": [
      "wwwroot/lib/jquery/jquery.js",
      "wwwroot/lib/bootstrap/js/bootstrap.js",
      "wwwroot/lib/respond/respond.js",
      "wwwroot/lib/modernizr/modernizr.js",
      "wwwroot/lib/jquery-validation/dist/jquery.validate.js",
      "wwwroot/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": true,
      "renameLocals": true
    },
    // Optionally generate .map file
    "sourceMap": false
  }
]
