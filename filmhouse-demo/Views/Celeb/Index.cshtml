@{
    ViewData["Title"] = @ViewBag.Name;
}

@{
    Layout = "~/Views/Shared/_LayoutWide.cshtml";
}

@section Links {
    <link rel="stylesheet" href="~/css/celeb.css" />
}

@section Scripts {
    <script src="~/lib/smoothscroll/jquery.smooth-scroll.js"></script>
    <script src="~/lib/backstrech/jquery.backstrech.min.js"></script>
    <script src="~/js/Celeb/Index.js"></script>
}

@{
    if (ViewBag.CelebId == "01")
    {
        <include-content name="Celeb01.Index.Content.html" />
    }
    else if (ViewBag.CelebId == "03")
    {
        <include-content name="Celeb03.Index.Content.html" />
    }
    else if (ViewBag.CelebId == "04")
    {
        <include-content name="Celeb04.Index.Content.html" />
    }
    else
    {
        <include-content name="Celeb02.Index.Content.html" />
    }
}
